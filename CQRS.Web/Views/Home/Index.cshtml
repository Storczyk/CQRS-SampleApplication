<script src="~/lib/jquery/dist/jquery.min.js"></script>

@{
    ViewData["Title"] = "Home Page";
}
<div class="row" style="display:none" id="Table">
    <div class="col-lg-6">
        <div class="table">
            <table class="table table-bordered" id="tbl">
                <thead>
                    <tr class="table tab-content">
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div>
                <ul class="pagination pagination-lg pager" id="Pager"></ul>
            </div>
        </div>
    </div>
    <div class="col-lg-6" id="tableDtl" style="display:none">
        <div class="table">
            <table class="table table-bordered" id="tblDtl">
                <thead>
                    <tr class="table tab-content">
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Date Time</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <form id="addPrdt" method="post">
            <div class="col-lg-12">
                <label for="nm">Product Name:</label><input type="text" name="Name" id="nm" />
            </div>
            <div class="col-lg-12">
                <label for="dscptn">Description:</label><input type="text" name="Description" id="dscptn" style="margin-left:18px"  />
            </div>
            <div class="col-lg-12">
                <label for="prc">Price : </label><input type="number" name="Price" id="prc" style="margin-left:50px" />
            </div>
            <div class="col-lg-12">
                <input type="button" class="btn" value="Add Product" onclick="AddProduct(this)"/>
            </div>
        </form>
    </div>
    <div class="col-lg-6" id="editTbl" style="display:none">
        <form id="updatePrdct" method="put">
            <div class="col-lg-12">
                <label for="nm">Product Name:</label><input type="text" name="Name" id="nm" />
            </div>
            <div class="col-lg-12">
                <label for="dscptn">Description:</label><input type="text" name="Description" id="dscptn" style="margin-left:18px" />
            </div>
            <div class="col-lg-12">
                <label for="prc">Price : </label><input type="number" name="Price" id="prc" style="margin-left:50px" />
            </div>
            <div class="col-lg-12">
                <input type="button" class="btn" value="Update Product" onclick="UpdateProduct(this)" />
            </div>
            <div id="hidden"></div>
        </form>

    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {       
        GetProducts(1, 10);
    });
   
</script>
